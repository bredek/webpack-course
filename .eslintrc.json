{
    "extends": [
        "airbnb",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "ecmaFeatures": {
            "impliedStrict": true,
            "classes": true,
            "jsx": true
        },
        "plugins": [
            "react",
            "import"
        ],
        "sourceType": "module"
    },
    "rules": {
        "react/prefer-stateless-function": 0,
        "max-len": [1, 400],
        "no-plusplus": 0
    },
    "settings": {
        "import/resolver": "webpack"
    }
}
